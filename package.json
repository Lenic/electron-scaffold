{
  "name": "electron-scaffold",
  "version": "1.0.0",
  "description": "electron program scaffold.",
  "main": "./assets/background.js",
  "scripts": {
    "start": "electron .",
    "clean": "rm -rf dist assets && git clean -fd",

    "build:dev-main": "cross-env NODE_ENV=development webpack --progress --watch --config ./webpack.config.main.js",
    "build:dev-render": "cross-env NODE_ENV=development webpack --progress --watch --config ./webpack.config.render.js",
    "build:dev": "concurrently --kill-others --raw \"npm run build:dev-main\" \"npm run build:dev-render\"",
    "dev": "concurrently --kill-others --raw \"npm run build:dev\" \"sleep 5 && npm start\"",

    "build:prod-main": "cross-env NODE_ENV=development webpack --progress --config ./webpack.config.main.js",
    "build:prod-render": "cross-env NODE_ENV=development webpack --progress --config ./webpack.config.render.js",

    "dist": "concurrently --kill-others --raw \"npm run build:prod-main\" \"npm run build:prod-render\"",
    "pack:publish": "npm run clean && npm run dist && build --publish never",
    "pack": "build --dir"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "asar": "^0.12.4",
    "babel-core": "^6.21.0",
    "babel-loader": "^6.2.10",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "concurrently": "^3.1.0",
    "cross-env": "^3.1.4",
    "css-loader": "^0.26.1",
    "electron": "^1.4.13",
    "electron-builder": "^11.2.0",
    "electron-devtools-installer": "^2.0.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "fs-jetpack": "^0.10.5",
    "html-webpack-plugin": "^2.26.0",
    "json-loader": "^0.5.4",
    "less": "^2.7.2",
    "less-loader": "^2.2.3",
    "style-loader": "^0.13.1",
    "unzip2": "^0.2.5",
    "webpack": "^1.14.0",
    "webpack-merge": "^2.3.1"
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "deep-assign": "^2.0.0",
    "flux": "^3.1.2",
    "react": "^15.4.1",
    "react-dom": "^15.4.1",
    "react-router": "^3.0.0"
  },
  "directories": {
    "buildResources": "resources",
    "output": "dist"
  },
  "build": {
    "appId": "com.oneapm.f2e.demo-shell",
    "productName": "electron-scaffold",
    "files": [
      "assets/",
      "index.html"
    ]
  }
}
